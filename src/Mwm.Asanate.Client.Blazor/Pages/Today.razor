@inherits Fluxor.Blazor.Web.Components.FluxorComponent

@page "/today"

<h3 class="text-center mb-3">Today</h3>

@if (TsksState.Value.IsLoading) {
<div class="d-flex flex-row justify-content-center">
    <div class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
} else if (TsksState.Value.HasCurrentErrors) {
<span>Whoops! Looks like an issue occurred loading Tsks</span>
} else if (TsksState.Value.Entities.Any()) {

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Completed</th>
            <th scope="col">User ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tsk in TsksState.Value.Entities) {
        <tr>
            <td>@tsk.Id</td>
            <td>@tsk.Name</td>
            <td></td>
            <td></td>
        </tr>
            }
    </tbody>
</table>
}


