@using Syncfusion.Blazor.Popups
@using Syncfusion.Blazor.Inputs
@using Syncfusion.Blazor.RichTextEditor
@using Syncfusion.Blazor.Calendars

@if (TskModel != null) {
    <SfDialog @ref="Dialog" Height="50%" Width="50%" Target="#target" IsModal="true" ShowCloseIcon="true" @bind-Visible="@IsDialogShowing" >
        <DialogTemplates>
            <Header>
                @if (IsNew) {
                    <h2>ADD TSK</h2>
                } else {
                    <h2>UPDATE TSK</h2>
                }
            </Header>
            <Content>
                <div class="dialogContent">
                                
                    <div class="container">
                        <EditForm Model="@TskModel" OnValidSubmit="@Save">
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                            <div class="form-group">
                                <label for="name">Name:</label>
                                <InputText class="form-control" Id="name" @bind-Value="@TskModel.Name"></InputText>
                            </div>
                            <div class="form-group">
                                <label for="externalId">External ID:</label>
                                <InputText class="form-control" Id="externalId" @bind-Value="@TskModel.ExternalId"></InputText>
                            </div>
                           @* <div class="form-group">
                                <label for="durationEstimate">Duration:</label>
                                <InputText class="form-control" Id="durationEstimate" @bind-Value="@TskModel.DurationEstimate"></InputText>
                            </div>*@
                            <div class="form-group">
                                <label for="dueDate">Due Date:</label>
                                <SfDatePicker ID="dueDate" TValue="DateTime?" @bind-Value="@TskModel.DueDate" Placeholder='Choose a Date'></SfDatePicker>
                            </div>
                            <div class="form-group">
                                <label for="notes">Notes:</label>
                                <SfRichTextEditor bind-Value="@TskModel.Notes" />
                            </div>
                        </EditForm>
                    </div>

                </div>
            </Content>
            <FooterTemplate>
                <SfButton class="e-control e-btn e-success" @onclick="@Save">SAVE</SfButton>
                <SfButton class="e-control e-btn e-secondary" @onclick="@Close">CLOSE</SfButton>
               @* <button id="sendButton" class="e-control e-btn e-primary" data-ripple="true" @onclick="@Save">SAVOR</button>*@
            </FooterTemplate>
        </DialogTemplates>
        <DialogEvents Closed="@DialogCloseHandler"></DialogEvents>
    </SfDialog>
}
