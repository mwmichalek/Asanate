        <GridColumn Field=@nameof(TskModel.Name) 
                    HeaderText="Name" 
                    TextAlign="TextAlign.Left" 
                    Width="120" />
        <GridColumn Field=@nameof(TskModel.Status) 
                    HeaderText="Status" 
                    Width="150" />
        <GridColumn Field=@nameof(TskModel.InitiativeName) 
                    HeaderText="Initiative" 
                    TextAlign="TextAlign.Left" 
                    Width="130" />
