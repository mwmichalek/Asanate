@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" Theme="CustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <Mwm.MyQ.Client.Mud.Shared.TopNav />
    </MudAppBar>
    <MudDrawer @bind-Open="@IsDrawOpen" 
               onmouseover="@(() => DrawOpen())"
               onmouseout="@(() => DrawClose())"
               Elevation="2" Variant="@DrawerVariant.Mini">
        <MudDrawerHeader Class="p-2">
            <MudAvatar Rounded="true" Color="Color.Warning" Variant="Variant.Filled">
                <MudIcon Color="Color.Dark" Icon="@Icons.Filled.Group" Size="Size.Large" />
            </MudAvatar>
  
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

