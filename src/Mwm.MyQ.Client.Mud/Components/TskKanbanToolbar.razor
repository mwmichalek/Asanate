@inherits Mwm.MyQ.Client.Mud.Components.EventListenerComponent
@using Mwm.MyQ.Client.Service.Models
@using Mwm.MyQ.Domain
@using System.Linq

<MudPaper Elevation="25"  >
    <MudToolBar Class="p-1">
        
        <MudSpacer />

        <MudSelect 
                   MultiSelection="true" 
                   MultiSelectionTextFunc="@(new Func<List<string>, string>(GetCompanyNameFilterText))" 
                   @bind-Value="SelectCompanyNames"
                   @bind-SelectedValues="CompanyFilter" 
                   T="string" 
                   Label="Company" 
                   AdornmentIcon="@Icons.Material.Filled.Search" 
                   AnchorOrigin="Origin.BottomCenter">
            @foreach (var companyName in AllCompanyNames) {
                <MudSelectItem T="string" Value="@companyName">@companyName</MudSelectItem>
            }
        </MudSelect>

        <MudToggleIconButton @bind-Toggled="@IsTskQuickPaneVisible"
                         Icon="@Icons.Filled.AddTask" 
                         Color="@Color.Default" 
                         Title="Add Tsks"
                         Size="Size.Medium" 
                         ToggledIcon="@Icons.Filled.AddTask" 
                         ToggledColor="@Color.Success" 
                         ToggledTitle="Add Tsks" 
                         ToggledSize="Size.Medium" />
        <MudToggleIconButton @bind-Toggled="@IsGroupedTogether"
                         Icon="@Icons.Filled.Dehaze" 
                         Color="@Color.Default" 
                         Title="Grouped Together"
                         Size="Size.Medium" 
                         ToggledIcon="@Icons.Filled.Dehaze" 
                         ToggledColor="@Color.Success" 
                         ToggledTitle="Grouped By Company" 
                         ToggledSize="Size.Medium" />
                         <MudSpacer />
        <MudToggleIconButton @bind-Toggled="@IsActionStatusOnly"
                         Icon="@Icons.Outlined.OfflineBolt" 
                         Color="@Color.Default" 
                         Title="All Statuses"
                         Size="Size.Medium" 
                         ToggledIcon="@Icons.Outlined.OfflineBolt" 
                         ToggledColor="@Color.Success" 
                         ToggledTitle="Action Statuses" 
                         ToggledSize="Size.Medium" />

        <MudToggleIconButton @bind-Toggled="@IsInFocusOnly"
                         Icon="@Icons.Filled.Biotech" 
                         Color="@Color.Default" 
                         Title="All Tsks"
                         Size="Size.Medium" 
                         ToggledIcon="@Icons.Filled.Biotech" 
                         ToggledColor="@Color.Success" 
                         ToggledTitle="In Focus Tsks" 
                         ToggledSize="Size.Medium" /> 

